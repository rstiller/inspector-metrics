{
    "name": "inspector-monorepo",
    "version": "0.0.0",
    "private": true,
    "devDependencies": {
        "@hapi/hapi": "19.1.1",
        "@types/async": "3.0.8",
        "@types/chai": "4.2.11",
        "@types/hapi": "18.0.3",
        "@types/lodash": "4.14.149",
        "@types/mocha": "7.0.2",
        "@types/moment-timezone": "0.5.13",
        "@types/node": "13.9.5",
        "@types/sinon": "7.5.2",
        "@types/sinon-chai": "3.2.3",
        "chai": "4.2.0",
        "husky": "4.2.3",
        "js-yaml": "3.13.1",
        "lerna": "3.20.2",
        "minimist": "^1.2.5",
        "mocha": "7.1.1",
        "mocha-typescript": "1.1.17",
        "nock": "12.0.3",
        "nyc": "15.0.0",
        "pkgsign": "0.2.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "sinon": "9.0.1",
        "sinon-chai": "3.5.0",
        "standard": "14.3.3",
        "ts-node": "8.8.1",
        "tslint": "6.1.0",
        "typescript": "3.8.3"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "sign": "lerna run sign && git add packages/*/signature.json",
        "clean": "lerna run clean",
        "compile": "lerna run compile",
        "coverage": "lerna run coverage",
        "deps": "lerna run deps",
        "lint": "lerna run lint",
        "publish": "lerna publish",
        "publish-dry-run": "lerna publish --skip-npm --no-git-tag-version --no-push",
        "pretest": "lerna run compile --scope inspector-metrics",
        "publishDocs": "cd docs && git add --all . && git commit -nm 'Deploy to gh-pages' && git push origin gh-pages && cd ..",
        "prepublishDocs": "docker-compose run --rm docs",
        "test": "lerna run test"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run sign"
        }
    }
}
