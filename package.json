{
    "name": "monorepo",
    "version": "0.0.0",
    "private": true,
    "devDependencies": {
        "@testdeck/mocha": "0.3.3",
        "@types/async": "3.2.20",
        "@types/chai": "^4.3.5",
        "@types/chai-string": "^1.4.2",
        "@types/lodash": "^4.14.195",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.5.0",
        "@types/sinon": "^10.0.15",
        "@types/sinon-chai": "^3.2.9",
        "@typescript-eslint/eslint-plugin": "5.62.0",
        "@typescript-eslint/parser": "5.62.0",
        "chai": "^4.3.7",
        "chai-string": "^1.5.0",
        "eslint": "8.45.0",
        "eslint-config-standard-with-typescript": "36.1.0",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-n": "^16.0.1",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-promise": "6.1.1",
        "lodash": "^4.17.21",
        "mocha": "^10.2.0",
        "moment": "2.29.4",
        "nock": "13.3.2",
        "nyc": "^15.1.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "^5.0.1",
        "sinon": "^15.2.0",
        "sinon-chai": "^3.7.0",
        "standard": "17.1.0",
        "testdouble": "^3.18.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "scripts": {
        "build": "pnpm run --recursive build",
        "clean": "pnpm run --recursive clean && rimraf coverage docs .pnpm-store",
        "compile": "pnpm run --recursive compile",
        "coverage": "nyc pnpm run --recursive test",
        "deps": "pnpm run --recursive deps",
        "lint": "pnpm run --recursive lint",
        "pretest": "pnpm run --recursive --filter inspector-metrics compile",
        "publishDocs": "cd docs && git add --all . && git commit -nm 'Deploy to gh-pages' && git push origin gh-pages && cd ..",
        "prepublishDocs": "docker-compose run --rm docs",
        "test": "pnpm run --recursive test"
    },
    "compodoc": {
        "tsconfig": "./tsconfig.docs.json",
        "output": "./docs",
        "disableGraph": true,
        "includes": "./",
        "includeNames": "READMEs",
        "unitTestCoverage": "./coverage/coverage-summary.json"
    },
    "nyc": {
        "include": [
            "packages/*/lib/*.ts",
            "packages/*/lib/**/*.ts"
        ],
        "exclude": [
            "packages/*/test/*"
        ],
        "extension": [
            ".ts"
        ],
        "require": [],
        "reporter": [
            "json-summary"
        ],
        "all": true
    }
}
